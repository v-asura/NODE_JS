<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Home Page</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html {
            font-size: 62.5%;
        }

        html, body {
            font-family: "Inter", sans-serif;
            line-height: 1.4;
            font-weight: 300;
            scroll-behavior: smooth;
        }

        body {
            font-size: 1.4rem;
        }

        ul {
            list-style: none;
        }

        header {
            position: sticky;
            top: 0;
            background-color: #fff;
            z-index: 1000; /* Ensure header is above other content */
        }

        nav ul {
            display: flex;
            gap: 2rem;
        }

        nav ul li {
            font-size: 1.8rem;
        }

        nav ul li:hover {
            border-bottom: 1px solid #ccc;
            cursor: pointer;
        }

        nav i {
            font-size: 2.5rem;
        }

        main {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem;
        }

        .search-form {
            text-align: center;
            margin-bottom: 2rem;
        }

        .search-form input[type="text"] {
            width: 30%;
            padding: 1rem;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 1.6rem;
            margin-right: 1rem;
        }

        .search-form button {
            padding: 1rem 2rem;
            border: none;
            border-radius: 4px;
            background-color: #007BFF;
            color: #fff;
            font-size: 1.6rem;
            cursor: pointer;
        }

        .posts {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            margin-top: 2rem; /* Add margin to separate from header */
        }

        .post-card {
            border: 1px solid #ddd;
            border-radius: 8px;
            overflow: hidden; /* Ensure images don't overflow */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
            background-color: #fff;
            width: 100%;
        }

        .post-card:hover {
            transform: translateY(-5px); /* Add a slight lift on hover */
        }

        .post-card img {
            width: 100%;
            height: 300px; /* Fixed height */
            object-fit: cover; /* Ensure images cover the entire container */
            border-bottom: 1px solid #ddd;
            border-radius: 8px 8px 0 0; /* Rounded corners on top only */
        }

        .post-card h3 {
            margin: 1.5rem;
            font-size: 2.2rem;
            text-align: center;
        }

        .post-card p {
            color: #555;
            margin: 0 1.5rem 1.5rem;
            text-align: center;
            display: -webkit-box;
            -webkit-line-clamp: 4; /* Number of lines to show */
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .post-card a {
            display: block;
            text-align: center;
            padding: 1rem;
            color: #007BFF;
            text-decoration: none;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        .post-card a:hover {
            background-color: #007BFF;
            color: #fff;
        }



        footer ul {
            display: flex;
            gap: 2rem;
        }

        footer i {
            font-size: 2.5rem;
        }

        a {
            text-decoration: none;
            color: black;
        }
    </style>
</head>
<body>

    <!-- Header -->
    <%- include("../components/navbar.ejs")%>

    <!-- Main Content -->
    <main>

        <!-- Search Form -->
        <div class="search-form">
            <form action="/search" method="GET">
                <input type="text" name="query" placeholder="Search blogs...">
                <button type="submit">Search</button>
            </form>
        </div>

        <!-- Blog Posts Section -->
        <div class="posts">
            <% blogs.forEach((blog) => { %>
            <div class="post-card">
                <img src="<%- blog.image %>" alt="Post Image">
                <h3><%- blog.title %></h3>
                <p><%- blog.description %></p>
                <a href="/blog/<%- blog._id %>">Read More</a>
            </div>
            <% }) %>
        </div>
    </main>

    <!-- footer -->
   



</body>
</html>
